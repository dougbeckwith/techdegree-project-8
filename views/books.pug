extends layout.pug

block content
  h1 Books
  p 
    a(
      class='button'
      href='/books/new'
    ) Create New Book
  table 
    thead 
      tr
        th Title 
        th Author
        th Genre 
        th Year
    tbody
      if books
        each val in books 
          tr 
            td
              a(href=`/books/${val.id}`)= val.title  
            td= val.author 
            td= val.genre 
            td= val.year 

